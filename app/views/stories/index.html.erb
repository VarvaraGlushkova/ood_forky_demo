<p style="color: green"><%= notice %></p>

<% content_for :title, "Stories" %>

<h3>Menu</h3>
<ul style="display: flex; flex-direction:row; gap: 50px">
  <li><%= link_to "Chapters", chapters_path %></li>
  <li><%= link_to "Stories", stories_path %></li>
</ul>
<h1>Stories</h1>

<div id="stories">
  <% @stories.each do |story| %>
    <%= render story %>
    <p>
      <%= link_to "Show this story", story %>
    </p>
  <% end %>
</div>

<%= link_to "New story", new_story_path %>
