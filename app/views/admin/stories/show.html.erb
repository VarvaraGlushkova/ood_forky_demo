<p style="color: green"><%= notice %></p>


<%= render @story %>

<div class="M_StoryEditB">
  <div class="A_Button">
    <%= link_to "Изменить историю", edit_admin_story_path(@story) %> 
  </div>
  <div class="A_Button">
      <%= button_to "Удалить историю", admin_story_path(@story), method: :delete %>
  </div>
  <div class="A_Button">
      <%= link_to "Ко всем историям", admin_stories_path %>
  </div>

</div>


<h1>Главы</h1>

<div class="A_Button" style="margin-left: 0;">
  <%#= link_to "Добавить главу", new_admin_chapter_path(story_id: @story.id) %>
</div>



<div id="chapters">
  <% @story.chapters.each do |chapter| %>
    <%= render chapter %>
  <% end %>
</div> 

